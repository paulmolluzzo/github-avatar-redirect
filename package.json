{
  "name": "github-avatar-redirect",
  "version": "0.0.1",
  "description": "Redirects URLs directly to the GitHub user's avatar URL",
  "main": "index.js",
  "scripts": {
    "start": "node ./bin/www",
    "test": "xo",
    "watch": "nodemon ./bin/www"
  },
  "keywords": [
    "github",
    "avatar"
  ],
  "author": "Paul Molluzzo (http://paul.molluzzo.com)",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.15.0",
    "express": "^4.13.4",
    "github": "^0.2.4",
    "mongoose": "^4.4.10"
  },
  "devDependencies": {
    "nodemon": "^1.9.1",
    "xo": "^0.13.0"
  },
  "xo": {
    "envs": [
      "browser"
    ],
    "rules": {
      "new-cap" : 0
    },
    "space": true
  }
}
